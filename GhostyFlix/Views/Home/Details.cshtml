@model Application.App_Management.ViewModels.SeriesViewModel

@{
    ViewData["Title"] = "Detalles de la Serie";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center">Detalles de la Serie</h1>

    <div class="card fade-in">
        <div class="card-body">
            <h2 class="card-title">@Model.Name</h2>

            <div class="mb-4">
                <label class="form-label"><strong>Video</strong></label>
                <div>
                    <iframe width="100%" height="500" src="https://www.youtube.com/embed/@GetYouTubeVideoId(@Model.LinkVideo)?autoplay=1&mute=1" frameborder="0" allowfullscreen></iframe>
                </div>
            </div>

            <div class="mb-4">
                <label class="form-label"><strong>Productor:</strong></label>
                <p>@Model.ProducerName</p>
            </div>
            <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
        </div>
    </div>
</div>

@functions {
    private string GetYouTubeVideoId(string url)
    {
        var uri = new Uri(url);
        var query = System.Web.HttpUtility.ParseQueryString(uri.Query);
        return query["v"] ?? uri.Segments.Last();
    }
}

<style>
    .fade-in {
        animation: fadeIn 0.5s ease-in-out;
    }

    fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    .card {
        transition: transform 0.3s;
    }

    .card:hover {
        transform: scale(1.02);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
    }

    .btn-secondary {
        transition: background-color 0.3s;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }
</style>