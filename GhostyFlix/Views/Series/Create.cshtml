@model Application.App_Management.ViewModels.SeriesViewModel

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<h1 class="mb-4">Crear Series</h1>

<form asp-action="Create" method="post" class="needs-validation" novalidate>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CoverImage"></label>
        <input asp-for="CoverImage" class="form-control" required />
        <span asp-validation-for="CoverImage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LinkVideo"></label>
        <input asp-for="LinkVideo" class="form-control" required />
        <span asp-validation-for="LinkVideo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProducerId"></label>
        <select asp-for="ProducerId" asp-items="Model.Producers" class="form-control" required>
            <option value="">Seleccione el Productor</option>    
        </select>
        <span asp-validation-for="ProducerId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PrimaryGenreId"></label>
        <select asp-for="PrimaryGenreId" asp-items="Model.PrimaryGenres" class="form-control" required>
            <option value="">Seleccione el genero</option>
        </select>
        <span asp-validation-for="PrimaryGenreId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SecondaryGenreId"></label>
        <select asp-for="SecondaryGenreId" asp-items="Model.SecondaryGenres" class="form-control">
            <option value="">Seleccione el genero</option>
        </select>
        <span asp-validation-for="SecondaryGenreId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Crear</button>
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</form>
