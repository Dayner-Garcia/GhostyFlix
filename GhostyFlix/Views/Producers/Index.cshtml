@model IEnumerable<Application.App_Management.ViewModels.ProducersViewModel>

<h1 class="mb-4">Mantenimiento de Productoras</h1>

<a asp-action="Create" class="btn btn-primary mb-3">Crear Nueva Productora</a>

@if (!Model.Any())
{
    <div class="alert alert-info text-center" role="alert">
        <p>No hay productoras registradas en este momento.</p>
    </div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
        <tr>
            <th>Nombre</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var producer in Model)
        {
            <tr>
                <td>@producer.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@producer.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@producer.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}